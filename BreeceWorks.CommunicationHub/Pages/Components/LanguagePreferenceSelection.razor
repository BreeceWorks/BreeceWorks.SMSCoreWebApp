
@if (LanguagePreferencemaster == null && ErrorMessage == null)
{
    <p>
        <em>Loading ...</em>
    </p>
}
else if (!String.IsNullOrEmpty(ErrorMessage))
{
    <p style="color:red">
        <em>@ErrorMessage</em>
    </p>
}
else if (LanguagePreferencemaster != null)
{
    <select class="custom-select" @bind="@Value">
        <option value="Select" selected disabled="disabled">(Choose Language Preference)</option>
        @foreach (String curLanguagePreference in LanguagePreferencemaster)
        {
            <option value="@curLanguagePreference"> @curLanguagePreference</option>
        }
    </select>
}