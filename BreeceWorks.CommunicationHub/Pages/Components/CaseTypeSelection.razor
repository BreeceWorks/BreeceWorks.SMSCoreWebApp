
@if (CaseTypeMaster == null && ErrorMessage == null)
{
    <p>
        <em>Loading ...</em>
    </p>
}
else if (!String.IsNullOrEmpty(ErrorMessage))
{
    <p>
        <em>@ErrorMessage</em>
    </p>
}
else if (CaseTypeMaster != null)
{
    <select class="custom-select" @bind="@Value">
        <option value="Select" selected disabled="disabled">(Choose Privacy)</option>
        @foreach (String curPrivacy in CaseTypeMaster)
        {
            <option value="@curPrivacy"> @curPrivacy</option>
        }
    </select>
}