
@if (Privacymaster == null && ErrorMessage == null)
{
    <p>
        <em>Loading ...</em>
    </p>
}
else if (!String.IsNullOrEmpty(ErrorMessage))
{
    <p style="color:red">
        <em>@ErrorMessage</em>
    </p>
}
else if (Privacymaster != null)
{
    <select class="custom-select" @bind="@Value">
        <option value="Select" selected disabled="disabled">(Choose Privacy)</option>
        @foreach (String curPrivacy in Privacymaster)
        {
            <option value="@curPrivacy"> @curPrivacy</option>
        }
    </select>
}  