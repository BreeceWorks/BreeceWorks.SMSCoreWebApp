@page "/newCustomer"


<h3>New Customer</h3>

@if (CreatingCustomer == null && ErrorMessage == null)
{
    <p>
        <em>Loading ...</em>
    </p>
}
else if (!String.IsNullOrEmpty(ErrorMessage))
{
    <p style="color:red">
        <em>@ErrorMessage</em>
    </p>
}
@if (CreatingCustomer != null)
{
    <EditForm Model=@CreatingCustomer Context="generalFormContext" OnSubmit="Submit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <table>
            <tr><td><label>First Name: </label></td><td><InputText @bind-Value="CreatingCustomer.First" /></td></tr>
            <tr><td><label>Last Name: </label></td><td><InputText @bind-Value="CreatingCustomer.Last" /></td></tr>
            <tr><td><label>Email: </label></td><td><InputText @bind-Value="CreatingCustomer.Email" /></td></tr>
            <tr><td><label>Phone Number: </label></td><td><InputText @bind-Value="CreatingCustomer.Mobile" /></td></tr>
            <tr><td><label>Opted In To Recieve SMS: </label></td><td><InputCheckbox @bind-Value="CreatingCustomer.OptStatus" /></td></tr>
        </table>
        <table>
            <tr><td><button id="generalValidation" type="submit">Submit</button></td><td><button type="button" @onclick="@(() => Cancel())">Cancel</button></td></tr>
        </table>
    </EditForm>
}

